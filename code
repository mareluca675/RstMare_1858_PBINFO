#include <bits/stdc++.h>

using namespace std;


int main()
{
    ifstream fin("restmare.in");
    ofstream fout("restmare.out");
    
    long long n, k = 0;
    
    fin >> n;
    
    k = n / 2;
    
    if(n % 2)
    {
        fout << k * k;
    }
    else
    {
        fout << k * (k - 1);
    }
    
    return 0;
}
